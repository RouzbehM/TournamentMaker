<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="geeks.tournamentmaker.EnterMatchResults">>

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/homeTeamScore"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:text="(Home)"
        android:textAlignment="center" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/awayTeamScore"
        android:text="(Away)"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/homeTeamScore"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VS"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignTop="@+id/homeTeamScore"
        android:layout_centerHorizontal="true"
        android:textSize="75dp"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Submit Results"
        android:id="@+id/submitScores"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:text="Enter the score for each team below:"
        android:id="@+id/topText"
        android:textSize="25dp"
        android:textColor="#030202"
        android:layout_above="@+id/awayTeamScore"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
