<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="geeks.tournamentmaker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPlayerActivity"
            android:label="@string/title_activity_add_player" >
        </activity>
        <activity
            android:name=".AddTournament"
            android:label="@string/title_activity_add_tournament" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".EnterMatchResults"
            android:label="@string/title_activity_enter_match_results" >
        </activity>
        <activity
            android:name=".ViewTeams"
            android:label="@string/title_activity_view_teams" >
        </activity>
    </application>

</manifest>
